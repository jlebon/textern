{
  "name": "Textern",
  "description": "Edit text in your favourite external editor!",
  "homepage_url": "https://github.com/jlebon/textern",
  "manifest_version": 2,
  "version": "0.9b1",

  "browser_specific_settings": {
    "gecko": {
      "id": "textern@jlebon.com",
      "strict_min_version": "57.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content.js"
      ],
      "all_frames": true
    }
  ],

  "commands": {
    "textern": {
      "suggested_key": {
        "default": "Shift+Alt+D"
      },
      "description": "Edit externally"
    }
  },

  "options_ui": {
      "page": "options.html"
  },

  "permissions": [
    "tabs",
    "notifications",
    "nativeMessaging",
    "storage"
  ]
}
